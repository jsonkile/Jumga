<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Monkee" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand_primary</item>
        <item name="colorPrimaryVariant">@color/brand_primary_variant</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brand_secondary</item>
        <item name="colorSecondaryVariant">@color/brand_secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/brand_primary_variant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <!-- Customize your theme here. -->
        <item name="md_corner_radius">0dp</item>
        <item name="md_background_color">@color/lighter_grey3</item>
        <item name="md_ripple_color">@color/darker_grey</item>
        <item name="md_color_title">@color/black</item>
        <item name="md_color_content">@color/black</item>
        <item name="md_color_button_text">@color/brand_primary_variant</item>
    </style>

    <style name="bottomNavigationTheme" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/lite_bottom_navigation_colors</item>
        <item name="itemTextColor">@color/lite_bottom_navigation_colors</item>
        <item name="backgroundTint">@color/white</item>
        <item name="elevation">5dp</item>
    </style>

    <style name="StoreBottomNavigationTheme" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/lite_store_bottom_navigation_colors</item>
        <item name="itemTextColor">@color/lite_store_bottom_navigation_colors</item>
        <item name="backgroundTint">@color/white</item>
        <item name="elevation">5dp</item>
    </style>

    <style name="baseBackground">
        <item name="backgroundColor">@color/background</item>
        <item name="backgroundTint">@color/background</item>
        <item name="background">@color/background</item>
    </style>

    <style name="headingCardTheme" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/brand_primary</item>
    </style>

    <style name="Theme.Monkee.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ActivityTheme" parent="Theme.Monkee.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/brand_primary_variant
        </item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="AuthActivityTheme" parent="Theme.Monkee.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/brand_primary
        </item>
    </style>

    <style name="SplashActivityTheme" parent="Theme.Monkee.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/brand_primary_variant
        </item>
    </style>

    <style name="TopBarStyle" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:background">@color/brand_primary</item>
    </style>

    <style name="CollapsingToolbarTheme" parent="Widget.Design.CollapsingToolbar">
        <item name="contentScrim">@color/brand_primary</item>
        <item name="statusBarScrim">@color/brand_primary_variant</item>
        <item name="scrimAnimationDuration">300</item>
    </style>

    <style name="Theme.PrepApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.PrepApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BigHeadingText">
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">42sp</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LinkHeadingText">
        <item name="android:textSize">17sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/darker_grey2</item>
    </style>

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:paddingTop">25dp</item>
        <item name="android:paddingBottom">25dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/brand_primary</item>
    </style>

    <style name="SecondaryButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:paddingTop">25dp</item>
        <item name="android:paddingBottom">25dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/brand_secondary</item>
    </style>


    <style name="TextLink">
        <item name="android:textColor">@color/brand_secondary</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="InfoText">
        <item name="android:textColor">@color/brand_secondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ItemName">
        <item name="android:ellipsize">end</item>
        <item name="maxLines">2</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ItemPrice">
        <item name="android:textColor">@color/brand_secondary</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="BackgroundIcon">
        <item name="tint">@color/lighter_grey3</item>
    </style>

    <style name="BackgroundLabel">
        <item name="tint">@color/lighter_grey3</item>
    </style>

    <style name="HeadingText">
        <item name="android:textSize">23sp</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textColor">@color/darker_grey2</item>
    </style>

    <style name="BodyText">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/darker_grey2</item>
    </style>


    <style name="RaveTheme" parent="RaveAppTheme.NoActionBar">
        <item name="colorPrimary">@color/brand_primary</item>
        <item name="colorPrimaryDark">@color/brand_primary_variant</item>
        <item name="colorAccent">@color/brand_secondary</item>
        <item name="OTPButtonStyle">@style/SecondaryButton</item>
        <item name="PayButtonStyle">@style/SecondaryButton</item>
        <item name="PinButtonStyle">@style/PrimaryButton</item>
        <item name="OTPHeaderStyle">@style/HeaderStyle</item>
        <item name="TabLayoutStyle">@style/TabLayoutStyle</item>
        <item name="PinHeaderStyle">@style/HeaderStyle</item>
        <item name="PaymentTileStyle">@style/TileStyle</item>
        <item name="PaymentTileTextStyle">@style/TileTextStyle</item>
        <item name="PaymentTileDividerStyle">@style/TileDividerStyle</item>
    </style>

    <style name="TabLayoutStyle">
        <item name="android:background">@color/background</item>
        <item name="android:textColor">@color/darker_grey3</item>
    </style>

    <style name="HeaderStyle">
        <item name="android:background">@color/off_white</item>
    </style>

    <style name="TileStyle">
        <item name="android:background">@color/off_white</item>
    </style>

    <style name="TileTextStyle">
        <item name="android:textColor">@color/darker_grey3</item>
    </style>

    <style name="TileDividerStyle">
        <item name="android:textColor">@color/darker_grey</item>
    </style>

</resources>
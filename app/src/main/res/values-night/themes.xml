<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Monkee" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand_primary</item>
        <item name="colorPrimaryVariant">@color/brand_primary_variant</item>
        <item name="colorOnPrimary">@color/black</item>


        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brand_secondary</item>
        <item name="colorSecondaryVariant">@color/brand_secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>


        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/bar_color</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>


        <!-- Customize your theme here. -->
        <item name="md_corner_radius">0dp</item>
        <item name="md_background_color">@color/darker_grey3</item>
        <item name="md_ripple_color">@color/darker_grey</item>
        <item name="md_color_title">@color/off_white</item>
        <item name="md_color_content">@color/off_white</item>
        <item name="md_color_button_text">@color/brand_primary</item>
    </style>

    <style name="bottomNavigationTheme" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_navigation_colors</item>
        <item name="itemTextColor">@color/bottom_navigation_colors</item>
        <item name="backgroundTint">@color/bar_color</item>
    </style>

    <style name="StoreBottomNavigationTheme" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/store_bottom_navigation_colors</item>
        <item name="itemTextColor">@color/store_bottom_navigation_colors</item>
        <item name="backgroundTint">@color/bar_color</item>
    </style>

    <style name="baseBackground">
        <item name="backgroundColor">@color/base_color</item>
        <item name="backgroundTint">@color/base_color</item>
        <item name="background">@color/base_color</item>
    </style>

    <!--Text layouts-->
    <style name="BigHeadingText">
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">42sp</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textColor">@color/off_white</item>
    </style>

    <style name="LinkHeadingText">
        <item name="android:textSize">17sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/off_white</item>
    </style>

    <style name="HeadingText">
        <item name="android:textSize">23sp</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textColor">@color/lighter_grey3</item>
    </style>

    <style name="BodyText">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/lighter_grey3</item>
    </style>

    <style name="headingCardTheme" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/bar_color</item>
    </style>

    <style name="Theme.Monkee.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ActivityTheme" parent="Theme.Monkee.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/bar_color
        </item>
    </style>

    <style name="AuthActivityTheme" parent="Theme.Monkee.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/bar_color
        </item>
    </style>

    <style name="Theme.PrepApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="Theme.PrepApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="TopBarStyle" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:background">@color/bar_color</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="CollapsingToolbarTheme" parent="Widget.Design.CollapsingToolbar">
        <item name="contentScrim">@color/bar_color</item>
        <item name="statusBarScrim">@color/bar_color</item>
        <item name="scrimAnimationDuration">300</item>
    </style>

    <style name="BackgroundIcon">
        <item name="tint">@color/darker_grey2</item>
    </style>

    <style name="BackgroundLabel">
        <item name="tint">@color/darker_grey2</item>
    </style>



    <style name="RaveTheme" parent="RaveAppTheme.NoActionBar">
        <item name="colorPrimary">@color/brand_primary</item>
        <item name="colorPrimaryDark">@color/base_color</item>
        <item name="colorAccent">@color/brand_primary</item>
        <item name="OTPButtonStyle">@style/PrimaryButton</item>
        <item name="PayButtonStyle">@style/PrimaryButton</item>
        <item name="PinButtonStyle">@style/PrimaryButton</item>
        <item name="OTPHeaderStyle">@style/HeaderStyle</item>
        <item name="TabLayoutStyle">@style/TabLayoutStyle</item>
        <item name="PinHeaderStyle">@style/HeaderStyle</item>
        <item name="PaymentTileStyle">@style/TileStyle</item>
        <item name="PaymentTileTextStyle">@style/TileTextStyle</item>
        <item name="PaymentTileDividerStyle">@style/TileDividerStyle</item>
    </style>

    <style name="TabLayoutStyle">
        <item name="android:background">@color/darker_grey2</item>
        <item name="android:textColor">@color/off_white</item>
    </style>

    <style name="HeaderStyle">
        <item name="android:background">@color/bar_color</item>
    </style>

    <style name="TileStyle">
        <item name="android:background">@color/bar_color</item>
    </style>

    <style name="TileTextStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TileDividerStyle">
        <item name="android:textColor">@color/darker_grey</item>
    </style>

</resources>